<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <ScrollView
        android:id="@+id/menuScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/todo_menu_layout"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/colorWhite"
                tools:background="@color/colorBlack">

                <ImageView
                    android:id="@+id/todoIconImageView"
                    android:layout_width="92dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:adjustViewBounds="false"
                    app:srcCompat="@drawable/ic_check_circle_white_48dp"/>

                <TextView
                    android:id="@+id/todoNameTextView"
                    style="@style/TextStyleMainMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@+id/todoIconImageView"
                    android:gravity="center"
                    android:text="@string/aufgaben"/>

                <TextView
                    android:id="@+id/todoInfoTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="20dp"
                    android:layout_toEndOf="@+id/todoIconImageView"
                    android:gravity="center"
                    android:text="8 unerledigte aufgaben"
                    android:textColor="@android:color/darker_gray"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/guestlist_menu_layout"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorWhite"
                tools:background="@color/colorBlack">

                <ImageView
                    android:id="@+id/guestlistIconImageView"
                    android:layout_width="92dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:adjustViewBounds="false"
                    app:srcCompat="@drawable/ic_recent_actors_white_48dp"/>

                <TextView
                    android:id="@+id/guestlistNameTextView"
                    style="@style/TextStyleMainMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@id/guestlistIconImageView"
                    android:gravity="center"
                    android:text="@string/gaesteliste"/>

                <TextView
                    android:id="@+id/guestlistInfoTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="20dp"
                    android:layout_toEndOf="@id/guestlistIconImageView"
                    android:gravity="center"
                    android:text="52 von 128 Gästen haben zugesagt"
                    android:textColor="@android:color/darker_gray"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/calendar_menu_layout"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorWhite"
                tools:background="@color/colorBlack">

                <ImageView
                    android:id="@+id/calendarIconImageView"
                    android:layout_width="92dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:adjustViewBounds="false"
                    app:srcCompat="@drawable/ic_event_white_48dp"/>

                <TextView
                    android:id="@+id/calendarNameTextView"
                    style="@style/TextStyleMainMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@id/calendarIconImageView"
                    android:gravity="center"
                    android:text="@string/kalender"/>

                <TextView
                    android:id="@+id/calendarInfoTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="20dp"
                    android:layout_toEndOf="@id/calendarIconImageView"
                    android:gravity="center"
                    android:text="4 verfügbare Termine"
                    android:textColor="@android:color/darker_gray"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/shopping_menu_layout"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorWhite"
                tools:background="@color/colorBlack">

                <ImageView
                    android:id="@+id/shoppingIconImageView"
                    android:layout_width="92dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:adjustViewBounds="false"
                    app:srcCompat="@drawable/ic_local_grocery_store_white_48dp"/>

                <TextView
                    android:id="@+id/shoppingNameTextView"
                    style="@style/TextStyleMainMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@id/shoppingIconImageView"
                    android:gravity="center"
                    android:text="@string/einkaufsliste"/>

                <TextView
                    android:id="@+id/shoppingInfoTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="20dp"
                    android:layout_toEndOf="@id/shoppingIconImageView"
                    android:gravity="center"
                    android:text="12 Artikel auf der Einkaufsliste"
                    android:textColor="@android:color/darker_gray"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-1814335808278709/1670880681"
        tools:layout_editor_absoluteY="12dp"
        ads:layout_constraintLeft_toLeftOf="parent"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintRight_toRightOf="parent">
    </com.google.android.gms.ads.AdView>

</android.support.constraint.ConstraintLayout>