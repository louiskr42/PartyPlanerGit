<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorLightBlue900</item>
        <item name="colorPrimaryDark">@color/colorBlue900</item>
        <item name="colorAccent">@color/colorLightBlue800</item>
        <item name="android:colorBackground">@color/backgroundGreyLight</item>
    </style>

    <style name="TextStyleMainMenu">
        <item name="android:gravity">top|center_horizontal</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">20</item>
        <item name="android:textColor">@color/colorBlue900</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="InfoTextViewStyle">
        <item name="android:textColor">@color/colorLightBlue800</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ImageViewStyleMainMenu">
        <item name="android:layout_weight">40</item>
    </style>

    <style name="TextStyleAufgabenListViewMain">
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">@color/colorWhiteTransparent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyleAufgabenListViewSub">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/colorGreyAccent</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/colorWhiteTransparent</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

</resources>
